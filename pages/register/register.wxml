<!-- 注册新会员 -->
<view class="add-page">
  <form bindsubmit='bindSubmit'>
    <view class="mod-a">
        <view class="header">
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </view>
    </view>

    <view class="mod-a mt20">
        <view class="mod">
            <text class="key">真实姓名</text>
            <input type='text' maxlength='20' name="RealName" class="input" maxlength="100" placeholder="请输入真实姓名" />
        </view>

        <view class="mod">
            <text class="key">手机号码</text>            
            <input name="Mobile" type='number' maxlength='11' class="input" maxlength="100" placeholder="请输入手机号码" />
        </view>

        <view class="mod">
            <text class="key">部门</text>            
            <input name="Department" type='text' maxlength='50' class="input" maxlength="100" placeholder="请输入部门" />
        </view>

        <view class="mod">
            <text class="key">职位</text>            
            <input name="Job" type='text' maxlength='50' class="input" maxlength="100" placeholder="请输入职位" />
        </view>

        <!-- 创建按钮 -->
        <view class="create">
            <button class="btn" form-type='submit'>提交</button>
        </view>

    </view>
  </form>
</view>